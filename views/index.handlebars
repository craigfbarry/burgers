<h2>Burgers ready</h2>

<ul>
  {{#each burgers}}
    {{#unless dataValues.devoured}}
      {{>burger-block dataValues}}
      {{/unless}}    
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger</label>
    <input type="text" id="burgerInput" name="name">
  </div>

  <button type="submit" class="new-item">Add burger</button>
</form>
<ul>
  {{#each burgers}}
    {{#if dataValues.devoured}}
      {{>burger-block dataValues}}
      {{/if}}    
  {{/each}}
</ul>
